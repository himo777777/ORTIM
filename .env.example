# ===========================================
# ORTAC Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database (PostgreSQL)
DATABASE_URL=postgresql://ortac:ortac_secret@localhost:5432/ortac?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-jwt-secret-min-32-characters-long-here
JWT_REFRESH_SECRET=your-refresh-secret-min-32-characters-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Criipto (BankID) - https://criipto.com
CRIIPTO_DOMAIN=your-tenant.criipto.id
CRIIPTO_CLIENT_ID=your-client-id
CRIIPTO_CLIENT_SECRET=your-client-secret
CRIIPTO_CALLBACK_URL=http://localhost:3000/auth/callback

# AWS S3 (for certificates PDF storage)
AWS_REGION=eu-north-1
AWS_S3_BUCKET=ortac-certificates
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Application URLs
API_URL=http://localhost:4000
WEB_URL=http://localhost:3000
VITE_API_URL=http://localhost:4000

# Environment
NODE_ENV=development

# Feature Flags
ENABLE_MOCK_BANKID=true
ENABLE_DEBUG_LOGGING=true

# LIPUS Configuration
LIPUS_NUMBER=
LIPUS_VALID_UNTIL=

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Push Notifications (Web Push VAPID)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@ortac.se

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@ortac.se

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# WebSocket
VITE_WS_URL=http://localhost:4000

# Error Tracking (Sentry) - https://sentry.io
# Get your DSN from sentry.io
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Frontend Sentry (same DSN or separate project)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

# ===========================================
# AI (Claude/Anthropic) - https://console.anthropic.com
# ===========================================
ANTHROPIC_API_KEY=sk-ant-...
AI_MODEL=claude-sonnet-4-20250514
AI_MAX_TOKENS=2048
AI_RATE_LIMIT_PER_HOUR=100
